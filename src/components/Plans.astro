---
import { PLANS_LIST } from "../constants/data";
import { Image } from "astro:assets";

import CheckIcon from "../assets/check-icon.svg";
---

<div
  class="h-min py-8 bg-[#F2F2F2] bg-[url('src/assets/bg-green-logo.png')] bg-cover"
  id="plans"
>
  <div class="p-8 flex flex-col justify-center items-center">
    <p class="text-center text-7xl font-[Quahon] text-[#262624] mb-8">Planes</p>

    <div
      class="flex flex-col lg:flex-row gap-x-16 gap-y-12 lg:gap-x-0 justify-center items-center"
    >
      {
        PLANS_LIST.map((plan) => (
          <div class="flex flex-col rounded-xl p-6 shadow-lg border-2 border-white h-full lg:h-[580px] w-full md:w-[380px] bg-white mx-6">
            <div class="text-[#D9736A] font-[Quahon] text-2xl text-center font-extrabold mb-4 tracking-wider">
              {plan.title}
            </div>

            <div class="text-[#262624] mb-4">{plan.text}</div>
            {plan.options.map((option) => (
              <div class="flex gap-x-2 mt-4">
                <Image src={CheckIcon} class="w-5 h-6" alt="Check icon" />
                <div class="text-[#262624]">{option.text}</div>
              </div>
            ))}
            <div class="flex justify-center items-end mt-auto">
              <button
                class="bg-[#D9736A] text-white rounded-full py-2 px-16 text-lg
              transition-all duration-300 ease-in-out transform hover:scale-105 hover:brightness-110 active:shadow-lg
              animate-fadeInUp font-[Quahon] font-extrabold tracking-widest mt-8 lg:mt-0"
              >
                Â¡Lo quiero!
              </button>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</div>
